= form_for @city do |f|
  -if @city.errors.any?
    #error_explanation
      %h2= "#{pluralize(@city.errors.count, "error")} prohibited this city from being saved:"
      %ul
        - @city.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :region
    = collection_select :city, :region_id, Region.all, :id, :name,
        :prompt => true, :include_blank => true
  .actions
    = f.submit 'Save'
